name: RDP-Localtonet
on: workflow_dispatch
jobs:
  build:
    runs-on: windows-latest
    steps:
    - name: Download Localtonet
      run: |
        Invoke-WebRequest -Uri "https://localtonet.com/download/localtonet-windows-x64.zip" -OutFile "localtonet.zip"
        Expand-Archive localtonet.zip
    - name: Authenticate & Start
      env:
        TOKEN: ${{ secrets.LOCALTONET_TOKEN }}
      run: |
        .\localtonet.exe authtoken $env:TOKEN
        Start-Process .\localtonet.exe -ArgumentList "tcp 3389"
    - name: Keep Alive
      run: while($true){ Start-Sleep -Seconds 60 }
