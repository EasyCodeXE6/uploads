name: CI-RDP-US

on: 
  workflow_dispatch: # Allows you to start the RDP manually from the 'Actions' tab

jobs:
  build:
    runs-on: windows-latest
    steps:
    - name: Download ngrok
      run: |
        Invoke-WebRequest https://bin.equinox.io/c/bNyj1mQVY4c/ngrok-v3-stable-windows-amd64.zip -OutFile ngrok.zip
    
    - name: Extract ngrok
      run: |
        Expand-Archive ngrok.zip
        
    - name: Auth ngrok
      run: |
        .\ngrok\ngrok.exe authtoken ${{ secrets.NGROK_AUTH_TOKEN }}

    - name: Enable Remote Desktop
      run: |
        Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server' -name "fDenyTSConnections" -Value 0
        Enable-NetFirewallRule -DisplayGroup "Remote Desktop"
        Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server\WinStations\RDP-Tcp' -name "UserAuthentication" -Value 1
        
    - name: Set Runner Password
      run: |
        $Password = ConvertTo-SecureString "P@ssw0rd1234!" -AsPlainText -Force
        Set-LocalUser -Name "runneradmin" -Password $Password

    - name: Create US Tunnel
      run: |
        # Starts the tunnel in the US region in the background
        Start-Process .\ngrok\ngrok.exe -ArgumentList "tcp --region us 3389"
        
    - name: Get RDP Address
      run: |
        # Give ngrok 10 seconds to initialize and grab an IP
        Start-Sleep -Seconds 10
        $Response = Invoke-WebRequest -Uri "http://127.0.0.1:4040/api/tunnels" | ConvertFrom-Json
        $ngrok_url = $Response.tunnels.public_url
        Write-Host "----------------------------------------------"
        Write-Host "YOUR RDP ADDRESS: $ngrok_url"
        Write-Host "----------------------------------------------"
        Write-Host "Username: runneradmin"
        Write-Host "Password: P@ssw0rd1234!"
        Write-Host "----------------------------------------------"

    - name: Keep Alive Loop
      # Keeps the VM alive for 6 hours (360 minutes)
      run: |
        $i = 0
        while($i -lt 360) { 
          Write-Host "Tunnel Active... Minute: $i"
          Start-Sleep -Seconds 60
          $i++
        }
